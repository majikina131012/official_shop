<h1>会員情報詳細</h1>

<table>
  <thead></thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>フリガナ</th>
      <th>メールアドレス</th>
      <th>郵便番号</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @customer.id %></td>
      <td><%= @customer.name %></td>
      <td><%= @customer.name_kana %></td>
      <td><%= @customer.email %></td>
      <td><%= @customer.postal_code %></td>
      <td><%= @customer.address %></td>
    </tr>
  </tbody>
</table>

<h1>購入履歴</h1>

<table>
  <thead>
    <tr>
      <td>購入日時</td>
      <td>購入者</td>
      <td>注文個数</td>
      <td>注文ステータス</td>
    </tr>
  </thead>
<% @orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= link_to  admin_order_path(order.id) do %>
          <%=  l order.created_at %>
        <% end %>
      </td>
      <td><%= order.customer.name%></td>
      <td><%= order.order_details.sum(:amount) %></td>
      <td><%= order.status_i18n %></td>
    </tr>
  </tbody>
<% end %>
</table>


