<table>
  <thead>
    <tr>
      <th>グッズ画像</th>
      <th>グッズ名</th>
      <th>グッズ説明</th>
      <th>カテゴリ</th>
      <th>税抜価格</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @item.get_item_image(100,100) %></td>
      <td><%= @item.name %></td>
      <td><%= @item.description %></td>
      <td><%= @item.genre.name %></td>
      <td><%= @item.price_without_tax %></td>
      <td><%= @item.status_i18n %></td>
    </tr>
  </tbody>
</table>

<%= link_to "グッズ編集", edit_admin_item_path(@item.id) %>
<%= link_to "グッズ削除", admin_item_path(@item.id), method: :delete,  "data-confirm" => "本当に削除しますか？" %>