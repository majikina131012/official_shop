<h1>編集画面</h1>

<%= form_with model: @customer do |f| %>

  <div class="field">
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </div>
  
  
  <div class="field">
    <%= f.label :name_kana, "フリガナ" %><br>
    <%= f.text_field :name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号 %><br>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address %>
  </div>
  
  <%= f.submit '保存' %>
<% end %>

<%= link_to "退会", customers_check_path %>