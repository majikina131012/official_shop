<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>グッズ名</th>
      <th>支払金額</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td>
        <%= link_to order_path(order.id) do %>
          <%= l order.created_at %>
        <% end %>
      </td>
      <td>〒<%= order.postal_code %><%= order.address %><%= order.name %></td>
      <td>
        <% order.items.each do |item| %>
  				<p><%= item.name %></p>
  			<% end %>
      </td>
      <td><%= order.billing_amount %>円</td>
      <td><%= order.status_i18n %></td>
    </tr>
  </tbody>
  <% end %>
</table>